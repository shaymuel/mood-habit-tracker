{
  "swagger": "2.0",
  "info": {
    "title": "Habit & Mood Tracker API",
    "description": "Keeps track of habits made and moods felt. Recorded by user",
    "version": "1.0.0"
  },
  "host": "habit-mood-tracker.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "moods",
      "description": "Operations for moods"
    },
    {
      "name": "user",
      "description": "Operations for users"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/moods": {
      "get": {
        "tags": [
          "moods"
        ],
        "summary": "Get all moods",
        "operationId": "getAllMoods",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/moods"
              }
            }
          },
          "500": {
            "description": "Error occurred"
          }
        }
      }
    },
    "/moods/{id}": {
      "get": {
        "tags": [
          "moods"
        ],
        "summary": "Get specific mood",
        "operationId": "getMood",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Mood id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/moods"
              }
            }
          },
          "400": {
            "description": "Invalid Mood Id"
          },
          "404": {
            "description": "Mood not found"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get all users",
        "operationId": "getAllUsers",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/users"
              }
            }
          },
          "500": {
            "description": "Error occurred"
          }
        }
      },
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Creates User",
        "description": "Creates a new user",
        "operationId": "createNewUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Create user object",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/users"
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/users"
              }
            }
          },
          "400": {
            "description": "Error occurred"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get specific user",
        "operationId": "getUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/users"
              }
            }
          },
          "400": {
            "description": "Invalid User Id"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    }
  },
  "definitions": {
    "users": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "habits": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/users_habits"
          }
        },
        "chosenMoods": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/users_chosenMoods"
          }
        }
      }
    },
    "moods": {
      "type": "object",
      "properties": {
        "moodName": {
          "type": "string"
        },
        "moodDescription": {
          "type": "string"
        },
        "moodColor": {
          "type": "string"
        },
        "moodEmoji": {
          "type": "string"
        }
      }
    },
    "users_habits": {
      "type": "object",
      "properties": {
        "habitName": {
          "type": "string"
        },
        "build": {
          "type": "boolean"
        },
        "quit": {
          "type": "boolean"
        },
        "daily": {
          "type": "boolean"
        },
        "weekly": {
          "type": "boolean"
        },
        "monthly": {
          "type": "boolean"
        },
        "yearly": {
          "type": "boolean"
        },
        "timesPerGoalPeriod": {
          "type": "integer",
          "format": "int32"
        },
        "countDone": {
          "type": "integer",
          "format": "int32"
        },
        "backgroundColor": {
          "type": "string"
        },
        "daysCompleted": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "users_chosenMoods": {
      "type": "object",
      "properties": {
        "day": {
          "type": "string"
        },
        "moodName": {
          "type": "string"
        }
      }
    }
  }
}